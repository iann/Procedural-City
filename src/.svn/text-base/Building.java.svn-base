
public class Building {
	private BuildingType type;
	private float height;
	private float width;
	private float length;
	
	private float maxE;
	private float maxW;
	private float maxN;
	private float maxS;
	
	private int numOfBlocks;
	private Block[] blocks;
	
	public final static float baseHeight = 0.4f;
	
	public Building(){
		
	}
	public Building(BuildingType bt){
		type = bt;
	}
	
	public void setHeight(float height){
		this.height = height;
	}
	
	public void setWidth(float width){
		this.width = width;
	}
	
	public void setLength(float length){
		this.length = length;
	}
	
	public void setBlocks(Block[] blocks){
		this.blocks = blocks;
	}
	
	public void setNumOfBlocks(int number){
		numOfBlocks = number;
	}
	
	public void setMaxE(float maxE){
		this.maxE = maxE;
	}
	
	public void setMaxN(float maxN){
		this.maxN = maxN;
	}
	
	public void setMaxS(float maxS){
		this.maxS = maxS;
	}
	
	public void setMaxW(float maxW){
		this.maxW = maxW;
	}
	
	public BuildingType getType(){
		return type;
	}
	
	public float getHeight(){
		return height;
	}
	
	public float getWidth(){
		return width;
	}
	
	public float getLength(){
		return length;
	}
	
	public int getNumOfBlocks(){
		return numOfBlocks;
	}
	
	public float getMaxE(){
		return maxE;
	}
	
	public float getMaxN(){
		return maxN;
	}
	
	public float getMaxS(){
		return maxS;
	}
	
	public float getMaxW(){
		return maxW;
	}
	
	public Block[] getBlocks(){
		return blocks;
	}
}
